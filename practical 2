#include <iostream>
#include <math.h>
using namespace std;
int main()
{
 float a, b, c;
 float x1, x2, d;
 cout << "Enter odds a, b, c: ";
 cin >> a >> b >> c;
 d = b * b - 4 * a * c;
 if (d > 0)
  {
   x1 = (-b + sqrt(d)) / (2 * a);
   x2 = (-b - sqrt(d)) / (2 * a);
   cout << "\nRoot of the equation x1=" << x1;
   cout << "\nRoot of the equation x2=" << x2 <<endl;
  }
 if (d == 0)
  {
   x1 = (-b) / (2 * a);
   cout << "\nRoot of the equation x=" << x1 <<endl;
  }
 if (d < 0)
  {
   cout << "\nThere are no roots in the equation" <<endl;
  }
 system("pause");
 }
